<%= form_with local:true, url: '/login' do |form| %>

  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase text-light">Log In</h2>
              <p class="text-white-50 mb-5">Please enter your username and password</p>

              <div class="form-outline form-white mb-4">
                <%= form.label :username,  class:"control-label col-sm-3"  %>

                <%= form.text_field :username,  class:"form-control form-control-lg" %>
              </div>

              <div class="form-outline form-white mb-4">
                  <%= form.label "password", class:"control-label col-sm-3" %>
                  <%= form.password_field :password_hash, class:"form-control form-control-lg" %>
              </div>




              <button class="btn btn-secondary btn-lg" type="submit">Login</button>

              <div>
                <p class="mb-0">Don't have an account? <a href= "/users/new" class="text-white-50 fw-bold"> Sign Up</a>
                </p>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- Pills content -->