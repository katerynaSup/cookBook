<p style="color: green"><%= notice %></p>

<h1>Comments for Recipe "<%=@post.title %>"</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%if @post.comments.index(comment) %>
      <%= render comment %>
<%end %>
  <% end %>

      <%= button_to "New comment", new_post_comment_path(@post),  method: :get, class:"btn btn-primary btn-sm"%>

</div>