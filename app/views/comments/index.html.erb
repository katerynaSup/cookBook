<p style="color: green"><%= notice %></p>

<h1>Comments for Recipe "<%=@post.title %>"</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%if @post.comments.index(comment) %>
      <%= render comment %>
    <%end %>
    <%if current_user.eql? @user%>
      <%= button_to 'Edit This Comment', edit_post_comment_path(@post, comment), method: :get, class:"btn btn-outline-dark btn-sm"%>
    <%end %>
  <% end %>

      <%= button_to "New comment", new_post_comment_path(@post),  method: :get, class:"btn btn-outline-dark btn-sm"%>

</div>