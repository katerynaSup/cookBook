<p style="color: green"><%= notice %></p>

<h1>Comments for Recipe "<%=@post.title %>"</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to 'Edit Comment', edit_post_comment_path(@post, comment) %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_post_comment_path(@post) %>
