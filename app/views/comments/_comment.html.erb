<style>
    h1 {font-family: Avenir, fantasy;}
    h2 {font-family: Avenir, fantasy;font-size: 20px; color: black;font-weight: lighter}
    h6 {font-family: Avenir, fantasy;font-size: 28px; color: black;font-weight: bolder}
    h7 {font-family: Avenir, fantasy; font-size: 20px; color: black}
    h5 {font-family: Avenir, fantasy;font-size: 17px; font-weight: lighter;}
    h9 {font-family: Avenir, fantasy; font-size: 17px; font-weight: bold}
    p {font-size: 25px;}
</style>
<div id="<%= dom_id comment %>">
  <div class="row row-cols-1 row-cols-md-2">
    <div class="col mb-4">
      <div class="card border-dark alert-warning mb-3" style="width: 70rem";>
        <div class="card-body">
          <p class="card-text"><%= comment.body %></p>
          <div class="btn-group" role="group">
            <%if comment.user_id.eql? current_user.id %>
              <%= button_to 'Destroy Comment', [@post, comment], method: :delete, class:"btn btn-primary btn-sm"%>
            <%end %>

            <%= button_to 'Back to Post', @post, method: :get, class:"btn btn-primary btn-sm"%>

            <%if comment.user_id.eql? current_user.id  %>
              <%= button_to 'Edit This Comment', edit_post_comment_path(@post, comment), method: :get, class:"btn btn-primary btn-sm"%>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
