<p style="color: green"><%= notice %></p>
<style>
    h1 {font-family: Avenir, fantasy;}
    h2 {font-family: Avenir, fantasy;font-size: 20px; color: black;font-weight: lighter}
    h6 {font-family: Avenir, fantasy;font-size: 28px; color: black;font-weight: bolder}
    h7 {font-family: Avenir, fantasy; font-size: 20px; color: black}
    h5 {font-family: Avenir, fantasy;font-size: 17px; font-weight: lighter;}
    h9 {font-family: Avenir, fantasy; font-size: 17px; font-weight: bold}
    p {font-size: 25px;}
</style>

<div id="<%= dom_id post %>">
  <div class="alert alert-warning" role="alert" style="width: 30rem";>
    <h6>My Recipe</h6>
  </div>
  <%@number_of_likes = post.users_who_liked.count %>
    <div class="card text-black alert-warning mb-3" style="width: 70rem";>
      <h6 class="card-title">  <%=post.title %> </h6>
      <h2 class="card-subtitle mb-2 text-muted">
        Likes: <%=post.users_who_liked.count %>   Comments: <%=post.posted_comments %></h2>
      <p class="card-text">Ingredients: <%=post.ingredients%></p>
      <p class="card-text">Process:<%=post.content%></p>
      <div class="btn-group" role="group">
        <% if current_user.liked_posts.include?(post) %>
          <%=   button_to "Unlike", "/unlike_post/#{current_user.id}/#{post.id}", :method => :post, class: "btn btn-outline-dark btn-sm" %>
        <% else %>
          <%=    button_to "Like", "/like_post/#{current_user.id}/#{post.id}", :method => :post, class:"btn btn-outline-dark btn-sm" %>
        <% end %>

        <%=  button_to "See Post", "#{post_path(post)}", :method => :get, class:"btn btn-outline-dark btn-sm"%>
        <%=  button_to "See Comments", "#{post_comments_path(post)}", :method => :get, class:"btn btn-outline-dark btn-sm"%>
        <%= button_to "Edit This Post", edit_post_path(@post), method: :get, class: "btn btn-outline-dark btn-sm"%>
      </div>
    </div>

    <div class="card alert alert-info" role="alert" style="width: 30rem";>
      <h2>Comments:</h2>
      <% post.comments.each { |comment| %>
        <ul>
          <li>
            <%=  comment.body  %></li>
        </ul>
      <%  } %>
      <%=  button_to "Make a New Comment", "#{new_post_comment_path(post)}", :method => :get, class:"btn btn-outline-dark btn-sm"%>
    </div>
</div>
  <p>
    <strong>User:</strong>
    <%= post.user_id = current_user.id %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

</div>
