<style>
    h1 {font-family: Avenir, fantasy;}
    h2 {font-family: Avenir, fantasy;font-size: 20px; color: black;font-weight: bolder}
    h3 {font-family: Avenir, fantasy;font-size: 15px; color: black;font-weight: light}
    h6 {font-family: Avenir, fantasy;font-size: 28px; color: black;font-weight: bolder}
    h7 {font-family: Avenir, fantasy; font-size: 20px; color: black}
    h5 {font-family: Avenir, fantasy;font-size: 17px; font-weight: lighter;}
    h9 {font-family: Avenir, fantasy; font-size: 17px; font-weight: bold}
    p {font-size: 25px;}
</style>

<div class="alert alert-warning" role="alert">
  <h2>Total liked recipes: <%=@posts_liked.count %></h2>
  <%= button_to "Back to Profile", user_path(current_user), method: :get, class: "btn btn-primary px-5" %>
</div>
<% @posts_liked.each do |post| %>
  <div class="card text-black alert-warning mb-3" style="width: 78rem";>
    <h6 class="card-title">  <%=post.title %> </h6>
    <h3 class="card-subtitle mb-2 text-muted">
      Likes: <%=post.users_who_liked.count %></h3>
    <p class="card-text">Ingredients: <%=post.ingredients%></p>
    <p class="card-text">Process:<%=post.content%></p>

    <% unless current_user.liked_posts.include?(post) %>
      <%=puts current_user.liked_posts.include?(post) %>
      <%=   button_to "Like", "/like_post/#{current_user.id}/#{post.id}", :method => :post, class:"btn btn-dark btn-sm" %>
    <% end %>
  </div>
<%end %>
