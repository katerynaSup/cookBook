<p style="color: green"><%= notice %></p>

<h1>Previous Searches</h1>

<div id="searches">
  <% @searches.each do |search| %>
    <%= render search %>
    <p>
    <div class="btn-group" role="group">
      <%= button_to "Show this search", search, method: :get, class: "btn btn-outline-dark"%>
      <%= button_to "Delete this search", search, method: :delete, class: "btn btn-outline-dark bt-sm" %>
    </div>
    </p>
  <% end %>
</div>
<%= button_to "New search", new_search_path, method: :get, class: "btn btn-outline-dark bt-sm" %>
