<style>
    h1 {font-family: Avenir, fantasy;}
    h2 {font-family: Avenir, fantasy;font-size: 20px; color: black;font-weight: lighter}
    h6 {font-family: Avenir, fantasy;font-size: 28px; color: black;font-weight: bolder}
    h7 {font-family: Avenir, fantasy; font-size: 20px; color: black}
    h5 {font-family: Avenir, fantasy;font-size: 17px; font-weight: lighter;}
    h9 {font-family: Avenir, fantasy; font-size: 17px; font-weight: bold}
    p {font-size: 25px;}

</style>
<%= form_with(model: search) do |form| %>
  <% if search.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(search.errors.count, "error") %> prohibited this search from being saved:</h2>

      <ul>
        <% search.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card text-black alert-warning mb-3" style="width: 70rem";>
    <h6 class="card-title">  Type in a Word or Phrase to Explore </h6>
    <div class="form-outline form-white mb-4">
   <%= form.label "Search Phrase", class:"control-label col-sm-3" %>
    <%= form.text_field :search_tag %>
    </div>
    <button class="btn btn-outline-dark btn-lg px-3" type="submit">Search</button>
  </div>
<% end %>
